<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p" 
    xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
			http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd"
	default-autowire="byName">
	<!-- 订单中心的 -->
	<bean id="orderCenterFacade" class="com.tuan.ordercenter.impl.OrderCenterFacadeImpl">
	</bean>
	<bean id="orderQueryService" class="org.springframework.remoting.rmi.RmiProxyFactoryBean">
		<property name="serviceUrl">
			<value>rmi://ordercenter53.55tuan.me:16000/orderQueryService</value>
		</property>
		<property name="serviceInterface">
			<value>com.tuan.ordercenter.service.OrderQueryService</value>
		</property>
		<property name="lookupStubOnStartup">
			<value>false</value>
		</property>
		<property name="refreshStubOnConnectFailure">
			<value>true</value>
		</property>
		<property name="cacheStub">
			<value>true</value>
		</property>
	</bean>
</beans>