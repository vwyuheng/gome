<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans.xsd 
						http://code.alibabatech.com/schema/dubbo        
						http://code.alibabatech.com/schema/dubbo/dubbo.xsd"
						default-autowire="byName" >
	<!-- app baseinfo -->
	<dubbo:application name="inventory" owner="yushuqiang" />
	<!--  registry monitor info-->
	<dubbo:registry protocol="zookeeper"
		address="zk1-1.55tuan.me:2181,zk1-2.55tuan.me:2181,zk1-3.55tuan.me:2181"
		file="/data/application/dubbo/inventory.dubbo.cache" />
	<!-- by protocol type-->
	<dubbo:protocol name="hessian" port="8787" server="servlet"
		contextpath="hessian"/>
	
	<!-- 使Dubbo在Spring容器初始化完后，再暴露服务 -->
	<dubbo:provider delay="-1" />
	<!-- 声明需要暴露的服务接口	-->
	<dubbo:service ref="goodsInventoryQueryService"
		interface="com.tuan.inventory.service.GoodsInventoryQueryService" path="inventoryQuery"
		timeout="20000" version="1.0">
	</dubbo:service>
	
	<dubbo:service ref="goodsInventoryUpdateService"
		interface="com.tuan.inventory.service.GoodsInventoryUpdateService" path="goodsInventoryUpdate"
		timeout="20000" version="1.0">
	</dubbo:service>
	
	<!-- 服务使用方(消费者），引用其他工程的服务 -->
	<!-- <dubbo:reference id="userService" interface="com.tuan.service.UserService" check="false" version="1.0" /> -->
	
	<!-- 开启 -->
	<dubbo:monitor protocol="registry" />
	</beans>
