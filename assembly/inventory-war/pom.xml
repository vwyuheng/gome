							</artifactItems>
							<outputDirectory>${project.build.directory}/${assembly.name}.war/webapp/WEB-INF/lib</outputDirectory>
						</configuration>
					</execution>
					<execution>
						<id>copy-order-core</id>
						<phase>process-resources</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<!-- notifyserver jar -->
								<artifactItem>
									<groupId>com.tuan.notifyserver.client</groupId>
									<artifactId>notifyserver-client</artifactId>
								</artifactItem>
								<artifactItem>
									<groupId>com.tuan.notifyserver.common</groupId>
									<artifactId>notifyserver-common</artifactId>
								</artifactItem>
								<artifactItem>
									<groupId>com.tuan.notifyserver.core</groupId>
									<artifactId>notifyserver-core</artifactId>
								</artifactItem>
								<artifactItem>
									<groupId>com.tuan.notifyserver.console</groupId>
									<artifactId>notifyserver-console</artifactId>
								</artifactItem>
								<artifactItem>
									<groupId>io.netty</groupId>
									<artifactId>netty</artifactId>
								</artifactItem>
								<artifactItem>
									<groupId>org.eclipse.jetty</groupId>
									<artifactId>jetty-server</artifactId>
								</artifactItem>
								<artifactItem>
									<groupId>org.eclipse.jetty.orbit</groupId>
									<artifactId>javax.servlet</artifactId>
								</artifactItem>
								<artifactItem>
									<groupId>org.eclipse.jetty</groupId>
									<artifactId>jetty-continuation</artifactId>
								</artifactItem>
								<artifactItem>
									<groupId>org.eclipse.jetty</groupId>
									<artifactId>jetty-http</artifactId>
								</artifactItem>
								<artifactItem>
									<groupId>org.eclipse.jetty</groupId>
									<artifactId>jetty-io</artifactId>
								</artifactItem>
								<artifactItem>
									<groupId>org.eclipse.jetty</groupId>
									<artifactId>jetty-util</artifactId>
								</artifactItem>
								<artifactItem>
									<groupId>com.alibaba</groupId>
									<artifactId>fastjson</artifactId>
								</artifactItem>
								<!-- notifyserver jar end -->

								<artifactItem>
									<groupId>com.tuan.jeehe</groupId>
									<artifactId>jeehe-common</artifactId>
								</artifactItem>


								<!-- USFP jars -->
								<artifactItem>
									<groupId>com.tuan.cozy</groupId>
									<artifactId>cozy-common-lang</artifactId>
								</artifactItem>
								<artifactItem>
									<groupId>com.tuan.cozy</groupId>
									<artifactId>cozy-common-spring</artifactId>
								</artifactItem>
								<artifactItem>
									<groupId>com.tuan.cozy</groupId>
									<artifactId>cozy-framework-service</artifactId>
								</artifactItem>
								<!-- ucore jars -->
								<artifactItem>
									<groupId>com.tuan.inventory</groupId>
									<artifactId>inventory-model</artifactId>
								</artifactItem>
								<artifactItem>
									<groupId>com.tuan.inventory</groupId>
									<artifactId>inventory-service</artifactId>
								</artifactItem>
								<artifactItem>
									<groupId>com.tuan.inventory</groupId>
									<artifactId>inventory-service-impl</artifactId>
								</artifactItem>
								<artifactItem>
									<groupId>com.tuan.inventory</groupId>
									<artifactId>inventory-domain</artifactId>
								</artifactItem>
								<artifactItem>
									<groupId>com.tuan.inventory</groupId>
									<artifactId>inventory-dao</artifactId>
								</artifactItem>
								<artifactItem>
									<groupId>com.tuan.inventory</groupId>
									<artifactId>inventory-ext</artifactId>
								</artifactItem>
								<!-- for activemq -->
								<artifactItem>
									<groupId>com.tuan.cozy</groupId>
									<artifactId>cozy-common-activemq</artifactId>
								</artifactItem>

							</artifactItems>
							<outputDirectory>${project.build.directory}/${assembly.name}.war/webapp/WEB-INF/lib</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<!-- 过滤文件 -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<configuration>
					<encoding>UTF-8</encoding>
				</configuration>
				<executions>
					<!-- 过滤处理日志文件 -->
					<execution>
						<id>log-filter</id>
						<phase>process-resources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<encoding>UTF-8</encoding>
							<resources>
								<resource>
									<directory>${project.build.directory}/${assembly.name}.war/log/</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
							<outputDirectory>
								${project.build.directory}/${assembly.name}.war/webapp/WEB-INF/
							</outputDirectory>
							<overwrite>true</overwrite>
						</configuration>
					</execution>
					<!-- 过滤处理应用配置文件 -->
					<execution>
						<id>conf-filter</id>
						<phase>process-resources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<encoding>UTF-8</encoding>
							<resources>
								<resource>
									<directory>${project.build.directory}/${assembly.name}.war/conf/</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
							<outputDirectory>
								${project.build.directory}/${assembly.name}.war/webapp/WEB-INF/classes/
							</outputDirectory>
							<overwrite>true</overwrite>
						</configuration>
					</execution>
					<!-- 过滤处理数据库配置 -->
					<!-- 过滤处理Apache配置 -->
				</executions>
			</plugin>
			<!-- 文件名称处理 -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>rename-log4j</id>
						<phase>process-resources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<delete
									file="${project.build.directory}/${assembly.name}.war/webapp/WEB-INF/log4j.xml" />
								<copy
									file="${project.build.directory}/${assembly.name}.war/webapp/WEB-INF/log4j.xml.vm"
									tofile="${project.build.directory}/${assembly.name}.war/webapp/WEB-INF/log4j.xml" />
								<delete
									file="${project.build.directory}/${assembly.name}.war/webapp/WEB-INF/log4j.xml.vm" />
								<delete dir="${project.build.directory}/${assembly.name}.war/log" />
								<delete dir="${project.build.directory}/${assembly.name}.war/conf" />
							</tasks>
						</configuration>
					</execution>
					<execution>
						<id>rename-app-config</id>
						<phase>process-resources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<delete
									file="${project.build.directory}/${assembly.name}.war/webapp/WEB-INF/classes/app.properties" />
								<mkdir
									dir="${project.build.directory}/${assembly.name}.war/webapp/WEB-INF/classes/META-INF" />
								<copy
									file="${project.build.directory}/${assembly.name}.war/webapp/WEB-INF/classes/app.properties.vm"
									tofile="${project.build.directory}/${assembly.name}.war/webapp/WEB-INF/classes/META-INF/app.properties" />
								<delete
									file="${project.build.directory}/${assembly.name}.war/webapp/WEB-INF/classes/app.properties.vm" />
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- 打包 -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<descriptors>
						<descriptor>src/main/assemble/war.xml</descriptor>
					</descriptors>
					<attach>false</attach>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>process-resources</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<!-- 文件包处理 -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>rename-war</id>
						<phase>package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<delete
									file="${project.build.directory}/${project.artifactId}-${project.version}.war" />
								<copy
									file="${project.build.directory}/${project.artifactId}-${project.version}-war.zip"
									tofile="${project.build.directory}/${assembly.name}-${project.version}.war" />
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>
</project>
