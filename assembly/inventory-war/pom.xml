								</artifactItem>
								<!-- SPRING JAR -->
								<artifactItem>
									<groupId>org.apache.xbean</groupId>
									<artifactId>xbean-spring</artifactId>
								</artifactItem>
								<artifactItem>
									<groupId>org.springframework</groupId>
									<artifactId>spring</artifactId>
								</artifactItem>
								<artifactItem>
									<groupId>org.springframework</groupId>
									<artifactId>spring-core</artifactId>
								</artifactItem>
								<artifactItem>
									<groupId>org.springframework</groupId>
